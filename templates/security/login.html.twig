{% extends 'base.html.twig' %}

{% block title %}🗺️| {% trans %}Login{% endtrans %} - BlablaMiage{% endblock %}

{% block body %}
    {% if error is defined and error %}
        <div class="alert alert-danger">
            {{error.messageKey | trans(error.messagedata, 'security')}}
        </div>
    {% endif %}


    <form action="{{ path('login') }}" method="POST">
        <label for="username" class="sr-only">{% trans %}Login{% endtrans %}</label>
        <input type="text" id="username" class="form-control mb-3 col col-md-6 mb-4 mx-auto"  name="_username" placeholder="{% trans %}Login{% endtrans %}" required autofocus>

        <label for="password" class="sr-only">{% trans %}Password{% endtrans %}</label>
        <input type="password" id="password" class="form-control mb-3 col col-md-6 mb-4 mx-auto" name="_password" placeholder="{% trans %}Password{% endtrans %}" required>
        <button class="btn btn-lg btn-primary btn-block col col-md-6 mb-3 mx-auto" type="submit">{% trans %}Log in{% endtrans %}</button>
    </form>
    <a href="{{ path('register') }}">
        <h6 type="submit" class="mx-auto">{% trans %}Not registered yet ?{% endtrans %}</h6>
    </a>
{% endblock %}